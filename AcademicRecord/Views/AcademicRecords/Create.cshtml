@model AcademicRecord.Models.AcademicRecords
@using AcademicRecord.Models;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ACLayout.cshtml";
}

<h2>Create</h2>
<h3 class="text-danger">@ViewBag.Error</h3>
<h4>AcademicRecords</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="CourseCode" class="control-label"></label>
                 <select name="CourseCode" class="form-control">
                @if(ViewBag.Courses!=null)
                {
                   
                    @foreach (var item in (List<Course>)ViewBag.Courses)
                        {
                    <option value="@item.ID">
                        @item.CourseCode - @item.Title
                    </option>
                        }

                }
                </select>
                
                <span asp-validation-for="CourseCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudenID" class="control-label"></label>
                <select name="StudenID" class="form-control">
                    @if(ViewBag.Students!= null)
                    {
                    @foreach (var item in (List<Student>)ViewBag.Students)
                        {
                    <option value="@item.ID">
                        @item.StudentID - @item.Name
                    </option>
                        }
                    }
                    
                </select>
                <span asp-validation-for="StudenID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
